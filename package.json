{
  "name": "@root/satori",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "packageManager": "yarn@4.12.0",
  "workspaces": [
    "docs",
    "external/*",
    "external/*/external/*",
    "external/*/external/*/external/*",
    "external/*/external/*/packages/*",
    "external/*/packages/*",
    "adapters/*",
    "packages/*"
  ],
  "scripts": {
    "build": "yakumo build",
    "bump": "yakumo version",
    "dep": "yakumo upgrade",
    "pub": "yakumo publish",
    "lint": "eslint packages adapters --ext=ts --cache",
    "test": "yakumo test --import tsx",
    "test:text": "shx rm -rf coverage && c8 -r text yarn test",
    "test:json": "shx rm -rf coverage && c8 -r json yarn test",
    "test:html": "shx rm -rf coverage && c8 -r html yarn test",
    "sync:lark": "node --import tsx adapters/lark/scripts/types.ts"
  },
  "license": "MIT",
  "devDependencies": {
    "@cordisjs/eslint-config": "^1.1.1",
    "@types/node": "^25.0.3",
    "c8": "^7.14.0",
    "esbuild": "^0.27.2",
    "esbuild-register": "^3.6.0",
    "eslint": "^8.57.0",
    "shx": "^0.4.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.2",
    "yakumo": "^1.0.0",
    "yakumo-esbuild": "^1.0.0",
    "yakumo-tsc": "^1.0.0"
  },
  "resolutions": {
    "@types/koa__router/@types/koa": "^2"
  }
}
