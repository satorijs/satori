{
  "name": "@root/satori",
  "version": "1.0.0",
  "private": true,
  "packageManager": "yarn@1.22.19",
  "workspaces": [
    "docs",
    "external/*",
    "adapters/*",
    "packages/*"
  ],
  "scripts": {
    "build": "yakumo esbuild && yakumo tsc",
    "bump": "yakumo version",
    "dep": "yakumo upgrade",
    "pub": "yakumo publish",
    "lint": "eslint packages adapters --ext=ts --cache",
    "test": "yakumo mocha -r esbuild-register",
    "test:text": "shx rm -rf coverage && c8 -r text yarn test",
    "test:json": "shx rm -rf coverage && c8 -r json yarn test",
    "test:html": "shx rm -rf coverage && c8 -r html yarn test"
  },
  "license": "MIT",
  "devDependencies": {
    "@koishijs/eslint-config": "^1.0.4",
    "@types/chai": "^4.3.9",
    "@types/mocha": "^9.1.1",
    "@types/node": "^20.8.9",
    "c8": "^7.14.0",
    "chai": "^4.3.10",
    "esbuild": "^0.18.20",
    "esbuild-register": "^3.5.0",
    "eslint": "^8.52.0",
    "eslint-plugin-mocha": "^10.2.0",
    "mocha": "^9.2.2",
    "shx": "^0.3.4",
    "typescript": "^5.2.2",
    "yakumo": "^0.3.13",
    "yakumo-esbuild": "^0.3.26",
    "yakumo-mocha": "^0.3.1",
    "yakumo-publish": "^0.3.5",
    "yakumo-publish-sync": "^0.3.3",
    "yakumo-tsc": "^0.3.12",
    "yakumo-upgrade": "^0.3.4",
    "yakumo-version": "^0.3.4"
  }
}
